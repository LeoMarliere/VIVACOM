<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1040dp"
    android:layout_height="650dp"
    android:background="@drawable/background_information"
    android:padding="10dp">

        <TextView
            android:id="@+id/info_spotName"
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:text="L'Opera De Lille"
            android:textSize="35sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/rouge"
            android:textAlignment="textStart"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="520dp"
            android:layout_marginTop="85dp">

                <RelativeLayout
                    android:id="@+id/informations1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                        <TextView
                            android:id="@+id/info_txtInfos"
                            android:layout_width="900dp"
                            android:layout_height="410dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:text="Informations"
                            android:textAlignment="center"
                            android:textColor="@color/noir"
                            android:textSize="45sp" />

                        <TextView
                            android:id="@+id/info_plus"
                            android:layout_width="900dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="En savoir plus ..."
                            android:textAlignment="textEnd"
                            android:textColor="@color/noir"
                            android:textSize="26sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/informations2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="visible">

                        <TextView
                            android:id="@+id/info_more1"
                            android:layout_width="460dp"
                            android:layout_height="480dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="24dp"
                            android:gravity="center"
                            android:text="More"
                            android:textAlignment="center"
                            android:textColor="@color/noir"
                            android:textSize="35sp" />

                        <View
                            android:id="@+id/ligneVerticale"
                            android:layout_width="2dp"
                            android:layout_height="430dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/rouge"
                            android:layout_centerHorizontal="true" />

                        <TextView
                            android:id="@+id/info_more2"
                            android:layout_width="460dp"
                            android:layout_height="480dp"
                            android:layout_marginLeft="20dp"
                            android:layout_alignLeft="@id/ligneVerticale"
                            android:gravity="center"
                            android:textAlignment="center"
                            android:textColor="@color/noir"
                            android:textSize="35sp"
                            android:text="Informations" />

                        <TextView
                            android:id="@+id/info_moin"
                            android:layout_width="900dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:text="Précédent"
                            android:textColor="@color/noir"
                            android:textSize="26sp"
                            android:textAlignment="textEnd"/>


                </RelativeLayout>


        </RelativeLayout>




</RelativeLayout>