<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1040dp"
    android:layout_height="650dp"
    android:gravity="center_horizontal|center_vertical"
    android:background="@drawable/background_jeu_association">

    <RelativeLayout
        android:layout_width="1040dp"
        android:layout_height="640dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/dndAsso_txtVConsigne"
            android:layout_width="900dp"
            android:layout_height="500dp"
            android:padding="50dp"
            android:textAlignment="center"
            android:textColor="@color/noir"
            android:textSize="25sp"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal|center_vertical" />

        <LinearLayout
            android:id="@+id/dndAsso_GameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <GridLayout
                android:layout_width="750dp"
                android:layout_height="505dp"
                android:layout_marginTop="20dp"
                android:columnCount="4"
                android:rowCount="3"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/dndAsso_oneTop"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style">

                    <ImageView
                        android:id="@+id/dndAsso_imageOne"
                        android:layout_width="140dp"
                        android:layout_height="190dp"
                        android:layout_margin="5dp"
                        android:src="@color/blue"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dndAsso_twoTop"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style">

                    <ImageView
                        android:id="@+id/dndAsso_imageTwo"
                        android:layout_width="140dp"
                        android:layout_height="190dp"
                        android:layout_margin="5dp"
                        android:src="@color/blue"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dndAsso_threeTop"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style">

                    <ImageView
                        android:id="@+id/dndAsso_imageThree"
                        android:layout_width="140dp"
                        android:layout_height="190dp"
                        android:layout_margin="5dp"
                        android:src="@color/blue"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dndAsso_fourTop"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_column="3"
                    android:layout_row="0"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style">

                    <ImageView
                        android:id="@+id/dndAsso_imageFour"
                        android:layout_width="140dp"
                        android:layout_height="190dp"
                        android:layout_margin="5dp"
                        android:src="@color/blue"/>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/dndAsso_oneBot"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>

                <LinearLayout
                    android:id="@+id/dndAsso_twoBot"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>

                <LinearLayout
                    android:id="@+id/dndAsso_threeBot"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>

                <LinearLayout
                    android:id="@+id/dndAsso_fourBot"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_column="3"
                    android:layout_row="1"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>

                <TextView
                    android:id="@+id/dndAsso_txtVone"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:text="La Statue De Louise De Bettignies"
                    android:textSize="15sp"
                    android:textColor="@color/noir"
                    android:textAlignment="center"
                    android:gravity="center_horizontal|center_vertical"/>

                <TextView
                    android:id="@+id/dndAsso_txtVtwo"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:text="La Statue De Louise De Bettignies"
                    android:textSize="15sp"
                    android:textColor="@color/noir"
                    android:textAlignment="center"
                    android:gravity="center_horizontal|center_vertical"/>

                <TextView
                    android:id="@+id/dndAsso_txtVthree"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:text="La Statue De Louise De Bettignies"
                    android:textSize="15sp"
                    android:textColor="@color/noir"
                    android:textAlignment="center"
                    android:gravity="center_horizontal|center_vertical"/>

                <TextView
                    android:id="@+id/dndAsso_txtVfour"
                    android:layout_width="150dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_column="3"
                    android:layout_row="2"
                    android:text="La Statue De Louise De Bettignies"
                    android:textSize="15sp"
                    android:textColor="@color/noir"
                    android:textAlignment="center"
                    android:gravity="center_horizontal|center_vertical"/>

            </GridLayout>

            <Button
                android:id="@+id/dndAsso_btnValidate"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_action_terminer"
                android:textAlignment="center"/>

        </LinearLayout>

        <View
            android:id="@+id/dndAsso_ligne"
            android:layout_width="750dp"
            android:layout_height="2dp"
            android:layout_marginTop="242dp"
            android:layout_centerHorizontal="true"
            android:background="@color/noir"
            android:visibility="visible"/>

    </RelativeLayout>


    <include layout="@layout/player_selection"/>




</RelativeLayout>


