<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/photoGalery"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1040dp"
    android:layout_height="650dp"
    android:gravity="center_horizontal|center_vertical">

    <RelativeLayout
        android:id="@+id/photoContainer"
        android:layout_width="800dp"
        android:layout_height="600dp"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal|center_vertical">

        <ImageView
            android:layout_width="900dp"
            android:layout_height="720dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@color/blanc"/>

        <ImageView
            android:id="@+id/pg_photo1"
            android:layout_width="800dp"
            android:layout_height="600dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/pht_beffroi1" />

        <ImageView
            android:id="@+id/pg_photo2"
            android:layout_width="800dp"
            android:layout_height="600dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/test_1" />

        <ImageView
            android:id="@+id/pg_photo3"
            android:layout_width="800dp"
            android:layout_height="600dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal|center_vertical"
            android:src="@drawable/test_1" />

    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:src="@drawable/background_photo"
        android:visibility="visible"/>


</RelativeLayout>