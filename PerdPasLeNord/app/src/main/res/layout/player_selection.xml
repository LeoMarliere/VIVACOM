<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/playerSelection"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/background_teamcreation"
    android:padding="20dp"
    android:visibility="visible">

        <TextView
            android:id="@+id/selection_title"
            android:layout_width="700dp"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="40dp"
            android:text="@string/title_PlayerSelection"
            android:textColor="@color/rouge"
            android:visibility="visible"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:padding="30dp"
            android:layout_margin="50dp"
            android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/gameTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/rouge"
                    android:shadowColor="@color/text_shadow"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/gamerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textAlignment="center"
                    android:textColor="@color/noir"
                    android:textSize="35sp"
                    android:visibility="gone" />


        </RelativeLayout>

        <TextView
            android:id="@+id/blink_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="80dp"
            android:layout_marginBottom="40dp"
            android:text="Continuer ..."
            android:textColor="@color/noir"
            android:textSize="30sp"
            android:visibility="invisible" />



</RelativeLayout>

