<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="1040dp"
    android:layout_height="650dp"
    android:gravity="center_horizontal|center_vertical"
    android:background="@drawable/background_puzzle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <TextView
            android:id="@+id/dndPuzzle_txtVConsigne"
            android:layout_width="900dp"
            android:layout_height="500dp"
            android:padding="50dp"
            android:textAlignment="center"
            android:textColor="@color/noir"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textSize="25sp"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal|center_vertical"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/dndPuzzle_GameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:visibility="visible">

            <GridLayout
                android:layout_width="630dp"
                android:layout_height="480dp"
                android:layout_gravity="center"
                android:layout_marginLeft="205dp"
                android:columnCount="4"
                android:rowCount="3"
                android:padding="15dp"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/dndPuzzle_OneOne"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:background="@drawable/drag_n_drop_layout_style"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dndPuzzle_image1"
                        android:layout_width="142dp"
                        android:layout_height="142dp"
                        android:layout_margin="4dp"
                        android:src="@color/blue" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/dndPuzzle_OneTwo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:background="@drawable/drag_n_drop_layout_style"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dndPuzzle_image2"
                        android:layout_width="142dp"
                        android:layout_height="142dp"
                        android:layout_margin="4dp"
                        android:src="@color/blue" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dndPuzzle_OneThree"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:background="@drawable/drag_n_drop_layout_style"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dndPuzzle_image3"
                        android:layout_width="142dp"
                        android:layout_height="142dp"
                        android:layout_margin="4dp"
                        android:src="@color/blue" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dndPuzzle_OneFour"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_column="3"
                    android:layout_row="0"
                    android:background="@drawable/drag_n_drop_layout_style"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dndPuzzle_image4"
                        android:layout_width="142dp"
                        android:layout_height="142dp"
                        android:layout_margin="4dp"
                        android:src="@color/blue" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dndPuzzle_TwoOne"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:background="@drawable/drag_n_drop_layout_style"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dndPuzzle_image5"
                        android:layout_width="142dp"
                        android:layout_height="142dp"
                        android:layout_margin="4dp"
                        android:src="@color/blue" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dndPuzzle_TwoTwo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_column="1"
                    android:layout_row="1"
                    android:background="@drawable/drag_n_drop_layout_style"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dndPuzzle_image6"
                        android:layout_width="142dp"
                        android:layout_height="142dp"
                        android:layout_margin="4dp"
                        android:src="@color/blue" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dndPuzzle_TwoThree"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_column="2"
                    android:layout_row="1"
                    android:background="@drawable/drag_n_drop_layout_style"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dndPuzzle_image7"
                        android:layout_width="142dp"
                        android:layout_height="142dp"
                        android:layout_margin="4dp"
                        android:src="@color/blue" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dndPuzzle_TwoFour"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_column="3"
                    android:layout_row="1"
                    android:background="@drawable/drag_n_drop_layout_style"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dndPuzzle_image8"
                        android:layout_width="142dp"
                        android:layout_height="142dp"
                        android:layout_margin="4dp"
                        android:src="@color/blue" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dndPuzzle_ThreeOne"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:background="@drawable/drag_n_drop_layout_style"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dndPuzzle_image9"
                        android:layout_width="142dp"
                        android:layout_height="142dp"
                        android:layout_margin="4dp"
                        android:src="@color/blue" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dndPuzzle_ThreeTwo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_column="1"
                    android:layout_row="2"
                    android:background="@drawable/drag_n_drop_layout_style"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dndPuzzle_image10"
                        android:layout_width="142dp"
                        android:layout_height="142dp"
                        android:layout_margin="4dp"
                        android:src="@color/blue" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dndPuzzle_ThreeThree"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:background="@drawable/drag_n_drop_layout_style">

                    <ImageView
                        android:id="@+id/dndPuzzle_image11"
                        android:layout_width="142dp"
                        android:layout_height="142dp"
                        android:layout_margin="4dp"
                        android:src="@color/blue" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dndPuzzle_ThreeFour"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_column="3"
                    android:layout_row="2"
                    android:background="@drawable/drag_n_drop_layout_style"
                    android:orientation="vertical">


                </LinearLayout>


            </GridLayout>


        </LinearLayout>


    </RelativeLayout>

    <include layout="@layout/player_selection"/>


</RelativeLayout>
