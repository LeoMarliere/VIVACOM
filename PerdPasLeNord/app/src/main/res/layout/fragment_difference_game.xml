<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="1040dp"
    android:layout_height="650dp"
    android:gravity="center_horizontal|center_vertical">

    <RelativeLayout
        android:id="@+id/dif_layoutConsigne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blanc"
        android:visibility="gone">

        <TextView
            android:id="@+id/dif_consigne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consigne"
            android:textAlignment="center"
            android:layout_centerInParent="true"
            android:textColor="@color/noir"
            android:textSize="38sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/dif_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continuer ..."
            android:layout_marginTop="550dp"
            android:layout_marginLeft="750dp"
            android:textAlignment="center"
            android:textColor="@color/noir"
            android:textSize="30sp"/>

    </RelativeLayout>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/blanc"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/dif_succesScreen"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dif_correct1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                android:background="@drawable/correct"
                android:layout_marginTop="50dp"/>

            <ImageView
                android:id="@+id/dif_correct2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                android:background="@drawable/correct"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/dif_correct3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                android:background="@drawable/correct"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/dif_correct4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                android:background="@drawable/correct"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:id="@+id/dif_correct5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                android:background="@drawable/correct"
                android:layout_marginTop="10dp"/>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/dif_ImageLimite"
            android:layout_width="800dp"
            android:layout_height="600dp"
            android:layout_gravity="center"
            android:visibility="visible">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="10"
                android:rowCount="10"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/dif_Zero"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_row="0"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>
                <LinearLayout
                    android:id="@+id/dif_HUn"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="1"
                    android:layout_row="0"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>
                <LinearLayout
                    android:id="@+id/dif_HDeux"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="2"
                    android:layout_row="0"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>
                <LinearLayout
                    android:id="@+id/dif_HTrois"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="3"
                    android:layout_row="0"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>
                <LinearLayout
                    android:id="@+id/dif_HQuatre"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="4"
                    android:layout_row="0"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>
                <LinearLayout
                    android:id="@+id/dif_HCinq"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="5"
                    android:layout_row="0"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>
                <LinearLayout
                    android:id="@+id/dif_HSix"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="6"
                    android:layout_row="0"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>
                <LinearLayout
                    android:id="@+id/dif_HSept"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="7"
                    android:layout_row="0"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>
                <LinearLayout
                    android:id="@+id/dif_HHuit"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="8"
                    android:layout_row="0"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>
                <LinearLayout
                    android:id="@+id/dif_HNeuf"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="9"
                    android:layout_row="0"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_row="1"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_row="2"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_row="3"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_row="4"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_row="5"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_row="6"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_row="7"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_row="8"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>
                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="0"
                    android:layout_row="9"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>

                <LinearLayout
                    android:id="@+id/dif_dif1"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="1"
                    android:layout_row="4"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>

                <LinearLayout
                    android:id="@+id/dif_dif2"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="2"
                    android:layout_row="2"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>

                <LinearLayout
                    android:id="@+id/dif_dif3"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="3"
                    android:layout_row="7"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>

                <LinearLayout
                    android:id="@+id/dif_dif4"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="6"
                    android:layout_row="5"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>

                <LinearLayout
                    android:id="@+id/dif_dif5"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_column="8"
                    android:layout_row="3"
                    android:orientation="vertical"
                    android:background="@drawable/drag_n_drop_layout_style"/>


            </GridLayout>

            <ImageView
                android:id="@+id/dif_Image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"/>


        </RelativeLayout>



        <LinearLayout
            android:id="@+id/dif_errorScreen"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/dif_error1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                android:background="@drawable/error"
                android:layout_marginTop="100dp"/>

            <ImageView
                android:id="@+id/dif_error2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                android:background="@drawable/error"
                android:layout_marginTop="75dp"/>

            <ImageView
                android:id="@+id/dif_error3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible"
                android:background="@drawable/error"
                android:layout_marginTop="75dp"/>


        </LinearLayout>

    </LinearLayout>


    <include layout="@layout/player_selection"/>


</RelativeLayout>