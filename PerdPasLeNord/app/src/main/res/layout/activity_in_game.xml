<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/IG_mainLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/IG_layoutForMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/IG_layoutForUnableMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#4F000000"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/IG_layoutForGame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/IG_txtVSpotName"
            android:layout_width="600dp"
            android:layout_height="65dp"
            android:text="Place Louise De Bettignies"
            android:textColor="@color/rouge"
            android:shadowColor="@color/text_shadow"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/pancarte_nom_lieux"
            android:textSize="42sp"
            android:visibility="gone"/>


        <RelativeLayout
            android:id="@+id/IG_layoutForAction"
            android:layout_width="1040dp"
            android:layout_height="650dp"
            android:gravity="center_horizontal|center_vertical"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="40dp"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/IG_fragmentLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/IG_fragment_menu"
            android:layout_width="100dp"
            android:layout_height="800dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical"
            android:layout_alignParentRight="true" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/IG_layoutForRoadBook"
        android:layout_width="1040dp"
        android:layout_height="650dp"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp"
        android:visibility="gone" />


    <RelativeLayout
        android:id="@+id/MJ_Fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"/>




</RelativeLayout>